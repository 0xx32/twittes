{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
		"format": {},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"pretty": {
			"dependsOn": [
				"^format",
				"^lint"
			]
		},
		
		"dev": {
			"cache": false,
			"persistent": true
		},
		"preview": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"db:migrate": {
			"cache": false,
			"persistent": true 
		},
		"db:deploy": {
			"cache": false
		}
	}
}